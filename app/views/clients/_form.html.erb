<%= form_with(model: client, local: true) do |form| %>
  <% if client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :Cliente %>
    <%= form.text_field :name, class: "form-control", id: :client_name %>
  </div>

  <div class="form-group">
    <%= form.label :Contacto %>
    <%= form.text_field :contact_name, class: "form-control", id: :client_contact_name %>
  </div>

  <div class="form-group">
    <%= form.label :'Teléfono 1' %>
    <%= form.text_field :phone_number, class: "form-control", id: :client_phone_number %>
  </div>

  <div class="form-group">
    <%= form.label :'Teléfono 2' %>
    <%= form.text_field :phone2, class: "form-control", id: :client_phone2 %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", id: :client_email %>
  </div>

  <div class="form-group">
    <%= form.label :Cédula %>
    <%= form.text_field :NIT, class: "form-control", id: :client_NIT %>
  </div>

  <div class="form-group">
    <%= form.label :'Contacto para factura electrónica' %>
    <%= form.text_field :invoice_contact, class: "form-control", id: :client_invoice_contact %>
  </div>

  <div class="form-group">
    <%= form.label :'Email para factura electrónica' %>
    <%= form.text_field :invoice_email, class: "form-control", id: :client_invoice_email %>
  </div>

  <div class="form-group">
    <%= form.label :Provincia %>
    <%= form.text_field :province, class: "form-control", id: :client_province %>
  </div>

  <div class="form-group">
    <%= form.label :Canton %>
    <%= form.text_field :canton, class: "form-control", id: :client_canton %>
  </div>

  <div class="form-group">
    <%= form.label :Distrito %>
    <%= form.text_field :district, class: "form-control", id: :client_district %>
  </div>

  <div class="actions">

    <%= button_tag(type: 'submit') do %>
      <div class="btn btn-default ">
            Guardar
      </div>
    <% end %>
  </div>
<% end %>
